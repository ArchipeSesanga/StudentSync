@model StudentSync.Models.Student

@{
    ViewData["Title"] = "Delete Student";
    Layout = "_AdminLayout";
}

<h1>Delete Student</h1>

<h3>Are you sure you want to delete this student?</h3>
<div>
    <h4>@Model.StudentNumber - @Model.FirstName @Model.Surname</h4>
    <dl class="row">
        <dt class="col-sm-2">Enrollment Date</dt>
        <dd class="col-sm-10">@Model.EnrollmentDate.ToShortDateString()</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="StudentNumber" />
        <button type="submit" class="btn btn-danger">Delete</button> |
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
